    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex,nofollow">
    <title>Resend Verification</title>
    <<!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="ample-admin/plugins/images/favicon.png">
    <!-- Custom CSS -->
    <link href="ample-admin/css/style.min.css" rel="stylesheet">
